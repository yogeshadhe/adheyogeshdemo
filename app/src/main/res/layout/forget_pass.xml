<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/WhiteBgColor">

    <FrameLayout android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        >


        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:id="@+id/lay_btn_finish"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">


                    <EditText
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="Enter Mobile No"
                        android:textSize="11sp"
                        android:textColorHint="@color/GreyTextColor"
                        android:textColor="@color/BlackTextColor"
                        android:background="@drawable/inputbox_inn" />

                    <!--Button-->
                    <Button
                        android:id="@+id/btn_finish"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="10dp"
                        android:text="Forgot Password"
                        android:textSize="13sp"
                        android:textColor="@color/WhiteTextColor"
                        android:textAllCaps="false"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/button"
                        android:stateListAnimator="@null"/>
                    <!--Button Ends-->

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lay_resetpass"
                    android:visibility="gone"
                    android:layout_marginTop="60dp"
                        android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp">


                        <EditText
                            android:id="@+id/edt_otp"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:hint="Enter OTP"
                            android:textSize="11sp"
                            android:textColorHint="@color/GreyTextColor"
                            android:textColor="@color/BlackTextColor"
                            android:background="@drawable/inputbox_inn"
                           />
                        </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp">
                        <EditText
                            android:id="@+id/edt_new_pass"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:inputType="textPassword"
                            android:hint="Enter Password"
                            android:textSize="11sp"
                            android:textColorHint="@color/GreyTextColor"
                            android:textColor="@color/BlackTextColor"
                            android:background="@drawable/inputbox_inn"
                           />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp">
                        <EditText
                            android:id="@+id/edt_confirm_pass"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:inputType="textPassword"
                            android:hint="Retype Password"
                            android:textSize="11sp"
                            android:textColorHint="@color/GreyTextColor"
                            android:textColor="@color/BlackTextColor"
                            android:background="@drawable/inputbox_inn"
                          />
                    </LinearLayout>

                    <!--Button-->
                    <Button
                        android:id="@+id/btn_submt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Reset Password"
                        android:textSize="13sp"
                        android:textColor="@color/WhiteTextColor"
                        android:textAllCaps="false"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/button"
                        android:stateListAnimator="@null"/>
                    <!--Button Ends-->

                </LinearLayout>







            </LinearLayout>

        </ScrollView>

        <!--<android.support.design.widget.CoordinatorLayout
            android:id = "@+id/coordinator_layout"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:layout_marginTop="400dp">
        </android.support.design.widget.CoordinatorLayout>
-->
    </FrameLayout>


</LinearLayout>


