<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
        </shape>
    </item>
    <item
        android:top="-3dp"
        android:left="-3dp"
        android:right="-3dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="2dp"
                android:color="#1489be"/>
        </shape>
    </item>
</layer-list>